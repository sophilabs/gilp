{
  "name": "gilp",
  "version": "0.0.9",
  "description": "Gulp tasks for git hooks.",
  "main": "lib/index.js",
  "scripts": {
    "lint": "semistandard",
    "pretest": "npm run lint --scripts-prepend-node-path",
    "test": "jest",
    "coverage": "jest --coverage && cat ./tests/coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sophilabs/gilp.git"
  },
  "keywords": [
    "gulp",
    "git",
    "hooks"
  ],
  "author": "Sophilabs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sophilabs/gilp/issues"
  },
  "engines": {
    "node": ">= 10.0"
  },
  "homepage": "https://github.com/sophilabs/gilp#readme",
  "dependencies": {
    "gilp-util": "0.0.9",
    "gulp-filter": "6.0.0",
    "gulp-if": "3.0.0",
    "stream-array": "1.1.2",
    "strip-bom-buf": "2.0.0",
    "through2": "4.0.2",
    "vinyl": "2.2.1"
  },
  "devDependencies": {
    "coveralls": "3.1.0",
    "jest": "^26.5.3",
    "semistandard": "*"
  },
  "semistandard": {
    "env": [
      "jest"
    ]
  }
